include mixins/mixins

+wrapper

	div(ng-include="'app/template/menu.html'")

	+side
		div.fill(ng-include="'app/template/discovery-activity.html'")

	+content
		div.add__wrapper
			section.add.text-center
				h1 Subskrybuj jeszcze więcej.
				p.lead
					| Podaj tylko adres RSS strony, którą chcesz śledzić.
					br
					| My zajmiemy się resztą.
				form(role="form", name="addForm", ng-submit="submit(addForm.$valid)", novalidate)
					.row
						.form-group
							.col-md-6.col-md-offset-2
								input#addFeed.input-lg.form-control(type="text", placeholder="Wpisz adres RSS strony", ng-model="form.rssUrl", required, ng-required="true")
							.add__button.col-md-2
								button.btn.btn-lg.btn-block.btn-info(type="submit")
									span.glyphicon.glyphicon-plus
									|  Subskrybuj

			section.feeds__wrapper
				.row
					.col-md-8.col-md-offset-2
						ul.feeds.list-group
							li.feeds__thumb.list-group-item.feed-animation(ng-repeat="feed in feeds | filter: form.rssUrl")
								.row
									.col-xs-10
										img.feeds__image(ng-src="{{feed.image}}")
										.feeds__title.lead {{feed.title}}
										p.feeds__desc
											span.glyphicon.glyphicon-user
											|  {{feed.subscribers}}
									.col-xs-1.col-xs-offset-1
										a.feeds__button.btn-lg(href="#")
											span.glyphicon.glyphicon-plus-sign

